<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF3DB"
    android:orientation="vertical"
    tools:context=".BillActivity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="70dp"
           android:layout_height="80dp"
           android:gravity="center">
           <ImageView
               android:id="@+id/backb"
               android:layout_width="32dp"
               android:layout_height="23dp"
               android:src="@drawable/arrowleft"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="70dp"
           android:layout_height="80dp"
           android:gravity="center"
           android:layout_marginLeft="150dp"
           >
           <ImageView
               android:id="@+id/showdialog"
               android:layout_width="32dp"
               android:layout_height="23dp"
               android:src="@drawable/plus"

               />
       </LinearLayout>

       <LinearLayout
           android:layout_width="70dp"
           android:layout_height="80dp"
           android:gravity="center"

           >
           <ImageView
               android:id="@+id/share"
               android:layout_width="32dp"
               android:layout_height="23dp"
               android:src="@drawable/share"
               />
       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sri Oppiliappan Agencies"
            android:fontFamily="@font/cabin_semibold"
            android:textSize="23dp"
            android:textColor="#1C1A19"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No:26 Thanjavur Mainroad,Vangarampettai,
            Papanasam-614205"
            android:fontFamily="@font/cabin_semibold"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:textColor="#1C1A19"
            />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/cabin_semibold"
            android:text="Ph:04374223162  Cell:9443395295"
            android:textColor="#1C1A19"
            android:textSize="18dp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimation"
            android:fontFamily="@font/cabin_semibold"
            android:textSize="19dp"
            android:textColor="#1C1A19"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1C1A19"
                android:text="Name:"
                android:textSize="18dp"
                android:fontFamily="@font/cabin_semibold"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1C1A19"
                android:text="Address:"
                android:textSize="18dp"
                android:fontFamily="@font/cabin_semibold"
                android:layout_marginTop="4dp"/>

        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1C1A19"
                android:textSize="18dp"
                android:fontFamily="@font/cabin_semibold"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/customer_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_semibold"
                android:textColor="#1C1A19"
                android:textSize="18dp"
                android:layout_marginTop="4dp"/>


        </LinearLayout>


    </LinearLayout>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444">
    </TableRow>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="Barname"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/cabin_semibold"
            android:textColor="#1C1A19"
            />
            <ImageView

                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_width="wrap_content" />
        <TextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:textColor="#1C1A19"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/cabin_semibold"
            android:text="Quantity"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                />
        <TextView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:textColor="#1C1A19"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/cabin_semibold"
            android:text="Rate/kg"/>
            <ImageView

                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_width="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textColor="#1C1A19"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/cabin_semibold"
            android:textSize="18dp"
            android:text="Amount"/>
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444">
    </TableRow>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bill_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444">
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:textSize="15dp"
            android:textColor="#1C1A19"
            android:text="Total Amount :"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#1C1A19"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/cabin_semibold"
            android:text="Rs."/>

        <TextView
            android:id="@+id/total_Amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/cabin_semibold"
            android:text="Total Amount"
            android:textColor="#1C1A19"
            android:textSize="15dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:textColor="#1C1A19"
            android:textSize="15dp"
            android:text="GST amount :"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#1C1A19"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/cabin_semibold"
            android:text="Rs."/>
        <TextView
            android:id="@+id/gst_amount"
            android:layout_width="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#1C1A19"
            android:layout_marginRight="10dp"
            android:text="Total Amount"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#1C1A19"
            android:text="Date:"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#1C1A19"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/cabin_semibold"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:textColor="#1C1A19"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:text="Time:"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#1C1A19"
            />
    </LinearLayout>

    </LinearLayout>




